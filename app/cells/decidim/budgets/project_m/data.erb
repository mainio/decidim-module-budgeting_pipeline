<div class="card__info">
  <div class="card__info__item">
    <%= translated_attribute(model.budget.title) %>
  </div>

  <div class="card__info__item">
    #<%= model.id %>
  </div>
</div>

<% if has_category? || model.budget_amount > 0 %>
  <div class="card__info">
    <%= render :data_budget %>

    <% if has_category? %>
      <div class="card__info__item">
        <span class="card__category__name"><%= category %></span>
      </div>
    <% end %>
  </div>
<% end %>

