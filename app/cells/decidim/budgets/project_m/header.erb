<div class="card__header">
  <% if has_link_to_resource? %>
    <h3 class="show-for-sr"><%= title %></h3>
    <%= resource_link class: "card__link" do %>
      <div class="card__title">
        <%= title %>
      </div>
    <% end %>
  <% else %>
    <div class="card__link">
      <h3 class="card__title">
        <%= title %>
      </h3>
    </div>
  <% end %>

  <%= render_authorship if has_authors? %>
</div>
