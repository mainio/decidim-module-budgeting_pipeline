<div class="card <%= card_classes %>" role="region" aria-label="<%= t(".card_label", title: title) %>">
  <%= render :top if render_top? %>
  <%= render :state if state_visible? %>
  <%= render :image %>
  <%= render :category %>
  <%= render :details %>
  <div class="card__content">
    <%= render :header %>

    <div class="card__text">
      <div class="card__text--paragraph">
        <%= description %>
      </div>
    </div>
  </div>

  <%= render :data %>
  <%= render :status %>
  <%= render :footer %>
</div>
