<div class="reveal reveal--vote-finished" id="vote-finished-modal" data-reveal data-close-on-click="false" data-close-on-esc="false">
  <div class="reveal__header">
    <div class="icon-wrapper" aria-hidden="true">
      <%= render "icon_heart" %>
    </div>
    <h2 class="reveal__title"><%= t(".title") %></h2>
  </div>
  <div class="reveal__content" id="vote-finished-modal-content" aria-live="assertive">
    <%= render partial: "vote_finished_modal_content" %>

    <div class="row mt-3">
      <div class="columns small-8 small-push-2">
        <div>
          <%= link_to t(".sign_out"), decidim.destroy_user_session_path, method: :delete, class: "sign-out-link button expanded primary", role: "menuitem" %>
        </div>
        <div>
          <button class="button primary expanded hollow" data-close><%= t(".continue") %></button>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function() {
  var $modal = $("#vote-finished-modal");
  $modal.foundation("open");
});
</script>
