<%= render partial: "top" %>

<div class="row columns">
  <div class="static__content">
    <h2><%= t(".title") %></h2>
    <%== translated_attribute component_settings.vote_projects_page_content %>
  </div>

  <div class="row columns">
    <%= render partial: "decidim/budgets/projects/filters_small_view" %>
    <div class="card card--secondary show-for-mediumlarge">
      <div class="record-filters">
        <%= render partial: "decidim/budgets/projects/filters" %>
      </div>
    </div>
  </div>

  <div class="row columns">
    <div class="title-action">
      <h2 id="projects-count" class="title-action__title section-heading">
        <%= render partial: "decidim/budgets/projects/count" %>
      </h2>
    </div>
  </div>
  <div class="row">
    <div id="projects" class="columns" aria-live="polite">
      <%= render partial: "decidim/budgets/projects/projects" %>
    </div>
  </div>

  <div class="orders-summary bg-light mt-5">
    <div class="text-center">
      <h2><%= t(".orders_summary_title") %></h2>
      <p><%= t(".orders_summary_description") %></p>
    </div>

    <div class="row">
      <div class="columns mediumlarge-6 mediumlarge-push-3">
        <%= render partial: "orders_summary", locals: { orders: current_orders } %>
      </div>
    </div>
  </div>

  <div class="row column flex-actions actions mt-5">
    <%= link_to budgets_vote_path, class: "button primary hollow icon-before" do %>
      <%= icon "chevron-left", role: "img", "aria-hidden": true %>
      <%= t("decidim.budgets.votes.general.previous") %>
    <% end %>
    <%= link_to choose_vote_path, class: "button primary icon-after" do %>
      <%= t("decidim.budgets.votes.general.next") %>
      <%= icon "chevron-right", role: "img", "aria-hidden": true %>
    <% end %>
  </div>
</div>

<%= javascript_include_tag("decidim/filters") %>
<%= javascript_include_tag("decidim/budgeting_pipeline/projects") %>
