<div id="order-total-<%= order.budget.id %>" class="mb-3">
  <div class="text-right">
    <% if order.projects_rule? %>
      <%= t(".order_projects_sum") %>:
      &nbsp;&nbsp;
      <strong><%= order.confirmed_total %></strong>
    <% else %>
      <%= t(".order_budget_sum") %>:
      &nbsp;&nbsp;
      <strong><%= budget_to_currency order.confirmed_total %></strong>
    <% end %>
  </div>
</div>
