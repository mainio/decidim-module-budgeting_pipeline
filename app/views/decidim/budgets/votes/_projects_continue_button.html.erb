<% button_label ||= t("decidim.budgets.votes.general.next") %>

<% if can_cast_votes? %>
  <%= link_to preview_vote_path, class: "button primary icon-after" do %>
    <%= button_label %>
    <%= icon "chevron-right", role: "img", "aria-hidden": true %>
  <% end %>
<% else %>
  <%= content_tag :span, class: "button primary icon-after disabled" do %>
    <%= button_label %>
    <%= icon "chevron-right", role: "img", "aria-hidden": true %>
  <% end %>
<% end %>
