<% callout_class = project.selected? ? "success" : "alert" %>
<% content = translated_attribute(project.selected? ? component_settings.project_selected_content : component_settings.project_not_selected_content) %>

<div class="callout <%= callout_class %> margin-bottom-2">
  <div class="callout__title">
    <p class="h6"><%= project.selected? ? t(".selected") : t(".not_selected") %></p>
    <% if strip_tags(content).strip.present? %>
      <%== content %>
    <% end %>
  </div>
</div>
