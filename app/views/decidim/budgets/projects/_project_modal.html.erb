<div class="small reveal" data-reveal id="project-modal-<%= project.id %>" role="dialog" data-multiple-opened="true">
  <div class="reveal__header">
    <h3 class="reveal__title"><%= translated_attribute(project.title) %></h3>
    <button class="close-button" data-close aria-label="<%= t("decidim.budgets.budget_information_modal.close_modal") %>" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>

  <div class="row">
    <div class="columns mediumlarge-6">
      <%= render partial: "details_table" %>
    </div>
  </div>

  <div class="row columns">
    <%== translated_attribute(project.description) %>
  </div>

  <div class="row">
    <div class="columns medium-8 medium-offset-2">
      <button class="button expanded" data-close type="button">
        <%= t("decidim.budgets.projects.show.close") %>
      </button>
    </div>
  </div>
</div>
