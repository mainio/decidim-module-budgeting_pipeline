<%= decidim_modal id:"project-modal-#{project.id}" do %>
  <div data-dialog-container>
    <div class="reveal__header">
      <h2 id="project-modal-<%= project.id %>-label" class="reveal__title h3"><%= translated_attribute(project.title) %></h3>
    </div>

    <div class="row">
      <div class="columns">
        <%= render partial: "details_table" %>
      </div>
    </div>

    <div class="row columns">
      <%== translated_attribute(project.description) %>
    </div>
  </div>

  <div data-dialog-actions>
    <div class="row">
      <div class="columns medium-8 medium-offset-2">
        <button class="button expanded" data-close type="button">
          <%= t("decidim.budgets.projects.show.close") %>
        </button>
      </div>
    </div>
  </div>
<% end %>
