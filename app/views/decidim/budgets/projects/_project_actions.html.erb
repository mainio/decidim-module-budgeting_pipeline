
<div class="actions-panel bg-secondary">
  <%= cell("decidim/favorites/favorite_button", project, button_class: "link action-link", disable_tooltip: true) %>
</div>

<% if component_settings.geocoding_enabled? && project.address.present? && project.latitude.present? && project.longitude.present? %>
  <div class="actions-panel bg-secondary">
    <a href="#project_map" class="action-link">
      <span class="link-text"><%= t ".show_on_map" %></span>
      <%= icon "map-pin-line", role: "img", "aria-hidden": true %>
    </a>
  </div>
<% end %>

<% if project.commentable? %>
  <div class="actions-panel bg-secondary">
    <%= link_to "#comments", class: "action-link" do %>
      <span class="link-text"><%= t ".show_comments" %></span>
      <%= icon "question-answer-line", role: "img", "aria-hidden": true %>
    <% end %>
  </div>
<% end %>

<div class="actions-panel bg-secondary">
  <button type="button" class="link action-link" data-open="socialShare" aria-controls="socialShare" aria-haspopup="dialog">
    <span class="link-text"><%= t ".share" %></span>
    <%= icon "share-line", role: "img", "aria-hidden": true %>
  </button>
</div>

<%= render partial: "decidim/shared/share_modal" %>

<% if false %>
  <div class="actions-panel bg-secondary">
    <button type="button" class="link action-link">
      <%= icon "printer-line", role: "img", "aria-hidden": true %>
      <span class="link-text"><%= t ".print" %></span>
    </button>
  </div>
<% end %>
