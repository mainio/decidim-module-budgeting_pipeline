<%
main_row_column_class = begin
  if display_status_filter? && display_category_filter?
    "columns mediumlarge-6 large-3"
  else
    "columns mediumlarge-6 large-4"
  end
end
%>

<%= filter_form_for filter do |form| %>
  <div class="row columns">
    <div class="filters__section filters__section--title">
      <div class="row">
        <div class="columns mediumlarge-6 large-8">
          <p class="h3"><%= t(".title") %></p>
        </div>
        <div class="columns mediumlarge-6 large-4">
          <div class="text-right">
            <button type="reset" class="button primary small"><%= t ".reset" %></button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="<%= main_row_column_class %>">
      <div class="filters__section budget_id_filter">
        <fieldset>
          <legend class="mini-title"><%= t(".budget") %></legend>
          <%= form.select(:budget_id, filter_budgets_values, { label: false, include_blank: t(".budgets_values.all") }, html_options: { "aria-label": t(".budget"), "aria-controls": "projects" }) %>
        </fieldset>
      </div>
    </div>
    <% if display_status_filter? %>
      <div class="<%= main_row_column_class %>">
        <div class="filters__section status_filter">
          <fieldset>
            <legend class="mini-title"><%= t(".status") %></legend>
            <%= form.select(:status, filter_status_values, { label: false, include_blank: t(".status_values.all") }, "aria-label": t(".status"), "aria-controls": "projects") %>
          </fieldset>
        </div>
      </div>
    <% end %>
    <% if display_category_filter? %>
      <div class="<%= main_row_column_class %>">
        <div class="filters__section category_id_filter">
          <fieldset>
            <legend class="mini-title"><%= t(".category") %></legend>
            <%= form.select(:category_id, filter_categories_values, { label: false, include_blank: t(".categories_values.all") }, html_options: { "aria-label": t(".category"), "aria-controls": "projects" }) %>
          </fieldset>
        </div>
      </div>
    <% end %>
    <div class="<%= main_row_column_class %> end">
      <div class="filters__section">
        <div class="filters__search">
          <fieldset>
            <legend class="mini-title"><%= t(".search") %></legend>
            <div class="input-group">
              <%= form.search_field :search_text, label: false, class: "input-group-field", placeholder: t(".search"), title: t(".search"), "aria-label": t(".search") %>
              <div class="input-group-button">
                <button type="submit" class="button button--muted" aria-label="<%= t(".search") %>">
                  <%= icon "magnifying-glass", aria_label: t(".search"), role: "img" %>
                </button>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="columns mediumlarge-3">
      <div class="filters__section budget_amount_min_filter">
        <fieldset>
          <legend class="mini-title"><%= t(".budget_amount_min") %></legend>
          <div class="input-group">
            <%= form.number_field :budget_amount_min, label: false, class: "input-group-field", placeholder: t(".budget_enter_amount"), title: t(".budget_amount_min"), "aria-label": t(".budget_amount_min") %>
            <span class="input-group-label"><%= Decidim.currency_unit %></span>
          </div>
        </fieldset>
      </div>
    </div>
    <div class="columns mediumlarge-3<%= " end" unless current_user %>">
      <div class="filters__section budget_amount_max_filter">
        <fieldset>
          <legend class="mini-title"><%= t(".budget_amount_max") %></legend>
          <div class="input-group">
            <%= form.number_field :budget_amount_max, label: false, class: "input-group-field", placeholder: t(".budget_enter_amount"), title: t(".budget_amount_max"), "aria-label": t(".budget_amount_max") %>
            <span class="input-group-label"><%= Decidim.currency_unit %></span>
          </div>
        </fieldset>
      </div>
    </div>
    <% if current_user %>
      <div class="columns mediumlarge-6 end">
        <div class="filters__section activity_collection_radio_buttons_filter">
          <fieldset>
            <legend class="mini-title"><%= t(".activity") %></legend>
            <div class="inline-labels">
              <% filter_activity_values.each do |value| %>
                <label>
                  <%= form.radio_button :activity, value[1], label: false %>
                  <%= value[0] %>
                </label>
              <% end %>
            </div>
          </fieldset>
        </div>
      </div>
    <% end %>
  </div>

  <%= hidden_field_tag :order, order, id: nil, class: "order_filter" %>
<% end %>
